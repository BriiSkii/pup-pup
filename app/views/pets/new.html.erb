<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Let's add a new doggy</h3>
    <div class="panel-body">
      <div class="container">

        <%= form_for @pet do |f| %>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <div class="form-group">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Name" %>
                </div>

                <div class="form-group">
                  <%= f.text_field :breed, autocomplete: "email", class: "form-control", placeholder: "Breed" %>
                </div>

                <div class="form-group">
                  <%= f.label :pet_avi %>
                  <%= f.file_field :pet_avi, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :gender %><br />
                  <%= f.select :gender, [["Female", "Female"], ["Male", "Male"]], prompt: "Select...", class: "form-control", placeholder: "Gender" %>
                </div>

                <div class="form-group">
                  <%= f.text_field :color, autofocus: true, class: "form-control", placeholder: "Color" %>
                </div>

                <div class="form-group">
                  <%= f.label :age %><br />
                  <%= f.text_field :age, class: "form-control col-3", placeholder: "Age" %>
                </div>

                <div class="form-group">
                  <%= f.check_box :active %> Shots?
                </div>

                <div class="form-group">
                  <%= f.label :description %><br />
                  <%= f.text_area :description, class: "form-control", placeholder: "Tell us about your dog. " %>
                </div>

                <div>
                  <%= f.submit "Save", class: "btn btn-normal" %>
                </div>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
